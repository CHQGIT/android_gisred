<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout android:id="@+id/rlUbicacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start|left">

            <ImageButton android:id="@+id/btnUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:src="@drawable/ic_map_marker_black_36dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|right">

            <ImageButton android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:src="@drawable/ic_close_black_36dp"/>

            <ImageButton android:id="@+id/btnConfirmar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btnCancelar"
                android:layout_toEndOf="@id/btnCancelar"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:src="@drawable/ic_check_black_36dp"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
